@page "/"
@inject NavigationManager Nav
@inject Names nameLists

<PageTitle>Home</PageTitle>


<div class="container">
    <NavBar></NavBar>
    <h1>Hello, world!</h1>

    <p>Welcome to your new app. Enjoy!</p>
    <div class="row">
        <div class="col-md-3">
            <div class="input-group mb-3">
                <span class="input-group-text" id="basic-addon1">Your Name</span>
                <input type="text" class="form-control" @bind-value="nameLists.Name" placeholder="Enter Your Name" aria-label="Username" aria-describedby="basic-addon1">
            </div>
        </div>
        <div class="col-md-3">
            <p role="status">Current count: @currentCount</p>

            <button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
        </div>

    </div>
</div>



@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
        Console.WriteLine("Here");
    }
}
